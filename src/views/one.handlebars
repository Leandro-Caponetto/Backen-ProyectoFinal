<h1 class="text-center">My Producto</h1>

<div class="row row-cols-1  justify-content-center">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0 text-center p-2">
            <div class="col-m-6 text-center">
                 <img class="card-img-top"  src="{{product.photo}}">
            </div>
                <div class="class="col-md-8">
                    <h5 class="card-title">{{product.title}}</h5>
                    <p class="card-text">{{product.category}}</p>
                    <p class="card-text">{{product.description}}</p>
                    <p class="card-text">${{product.price}}</p>
                
                    <a href="/product/delete/{{product._id}}" class="btn btn-danger">Delete</a>
                    <a href="/product/{{product._id}}" class="btn btn-primary">Comprar</a>
                </div>
            
        </div>

    </div>
</div>


