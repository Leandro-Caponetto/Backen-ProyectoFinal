<h1 class="title text-center py-5">Productos</h1>



{{#each productos}}


    <div class="conatainer ">
        <div class="header row">
            <div class="products col-6 col-sm-3">
                <div class="product">
                    <div class="image">
                        <img  src="{{this.photo}} " alt="{{this.title}}">
                    </div>
                    <div class="namePrice">
                        <h3 class="card-title">{{this.category}}</h3>
                        <p>${{this.price}}</p>
                         
                    </div>
                    <p class="title">{{this.title}}</p>
                    <div class="stars">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <div class="bay">


                        <a href="/product/{{this.title}}" >Ver mas</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
    
    
{{/each}}

<div class="products__container">
  {{#each productos}}
    <div class="product__container">
      <div class="product__category">
        <span>{{this.category}}</span>
      </div>
      <div class="product__img--container">
        <img src={{this.photo}} alt={{this.title}} />
      </div>
      <h4 class="product__price">PRICE: ${{this.price}}</h4>
      <h3 class="product__title">{{this.title}}</h3>
      <button>add to cart</button>
    </div>
  {{/each}}
</div>


<style>
    :root{
        --bodyBack: #ffeaed;
        --textColor: #1b2741;
        --starColor: #f67034;
        --sectionBack: #f7f6f9;
    }

    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body{
        background-color: var(--bodyBack);
        
       

    }

    .conteiner{
        width: 80vw;
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
       
    }
    .header{
        width: 100%;
        text-align: center;


    }
    .header h1{
        font-size: 4em;
        text-transform: uppercase;
        color: var(--textColor);
    }

    .products{
        width: 100%;
        height: 70%;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 40px;
    }

    .product{
        position: relative;
        background-color: var(--sectionBack);
        width: 350px;
        height: 100%;
        box-shadow: 0 5px 20px rgba(0, 0, 0, .3); 
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px 20px 40px;
        border-radius: 10px;
        transition: .3s;

    }

    .product:hover{
        transform: translate(-15px);
        box-shadow: 0 5px 10px rgba(0, 0, 0, .2);
    }

    .image{
        width: 100%;
        height: 60%;
        display: grid;
        place-items: center;

    }

    .image img{
        width: 240px;
    }

    .namePrice{
        width: 100%;
        display: flex;
        justify-content: space-between;
    }
     .namePrice h3{
        font-size: 2em;
        text-transform: capitalize;
        color: var(--textColor);
        position: relative;
        
        bottom: 10px;
     }

     .namePrice p{
        font-size: 1.5em;
        color: var(--starColor);
     }

     .product .title{
        font-size: 18px;
        line-height: 25px;
        margin: 10px;
        position: relative;
        
        bottom: 20px;
     }

     .stars {
        font-size: 1,3em;
        color: var(--starColor);
        position: absolute;
        bottom: 20px;

     }
     .bay {
        position: absolute;
        bottom: 15px;
        right: 20px;
        text-decoration: none;
     }
    .bay a{
        padding: 10px 20px;
        border-radius: 7px;
        border: none;
        background-color: var(--textColor);
        color: var(--sectionBack);
        font-size: 18px;
        text-transform: capitalize;
        text-decoration: none;
        cursor: pointer;
        transition: .5s;
    }

    .bay a:hover{
        transform: scale(1.1);
    }

   
</style